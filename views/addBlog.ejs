<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('./partials/head.ejs') %>
        <%- include('./partials/nav.ejs') %>
            <!-- Include Quill CSS -->
            <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
            <!-- Include Tailwind CSS CDN -->
            <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">


            <title>Add Blog</title>
</head>

<body>
    <div class="flex items-center justify-center mt-4">

        <div class="bg-[#eeeded] w-[600px] p-6 rounded-lg shadow-md">
            <h2 class="text-2xl text-center font-semibold mb-4">Create New Post</h2>
            <form action="/blog" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label for="title" class="block font-semibold mb-1">Title</label>
                    <input type="text" id="title" name="title"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
                        placeholder="Create Post Title">
                </div>
                <div class="mb-4">
                    <label for="message" class="block font-semibold mb-1">Message</label>

                    <!-- <div id="editor-container" style="height: 300px;"></div>
                    <input type="hidden" id="message" name="body"> -->

                    <textarea id="message" name="body"
                        class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500" rows="4"
                        placeholder="What's on your mind???"></textarea>
                </div>
                <div class="mb-4">
                    <label for="image" class="block font-semibold mb-1">Image</label>
                    <input type="file" id="coverImageUrl" name="coverImageUrl" class="w-full py-2 focus:outline-none">
                </div>
                <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600">
                    Create Post
                </button>
            </form>
        </div>
    </div>






    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        // Initialize Quill
        var quill = new Quill('#editor-container', {
            theme: 'snow', // 'snow' is the default theme
        });

        // Set hidden input value with formatted content
        var blogContentInput = document.getElementById('message');
        quill.on('text-change', function () {
            blogContentInput.value = quill.root.innerHTML;
        });
    </script>

    <%- include('./partials/script.ejs') %>
</body>

</html>